{
  "name": "singolo",
  "version": "1.0.0",
  "repository": "git@github.com:newbornfrontender/singolo.git",
  "author": "newbornfrontender <newbornfrontender@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^1.19.1",
    "serve": "^11.3.0",
    "stylelint": "^13.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2"
  },
  "scripts": {
    "format": "prettier --write **/*.{html,js*,md}",
    "lint": "stylelint --fix **/*.css",
    "lint:check": "stylelint-config-prettier-check",
    "serve": "serve"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-rational-order",
      "stylelint-prettier/recommended"
    ]
  }
}
